<%- content_for :title do -%>New feed at <%- end -%>
<%- content_for :header do -%>
<h1>New feed</h1>
<%- end -%>
<%= error_messages_for :feed %>

<% form_for(@feed) do |f| %>

  <label for="uri">
    Feed URI<br>
    <%= f.text_field :uri, :class => "required" %>
  </label>
  
  <label for="type">
    Type of Feed:  <%= f.select :type, Feed.types %>
  </label>

  <%= f.hidden_field :type, :value => 'Twitter' %>

  <p>
    <%= f.submit "Add this feed", :title => "Adding feed..." %>
  </p>
<% end %>

<%= link_to 'Back', feeds_path %>
