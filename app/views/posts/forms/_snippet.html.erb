<div id="snippet" class="panel">
  <h1>New Snippet</h1>
  <% form_for(@post) do |f| %>
    <label for="header">
      Header (optional)<br />
      <%= f.text_field :header %>
    </label>

    <label for="content">
      Code<br />
      <%= f.text_area :content %>
    </label>

    <p>
      <%= f.submit "Create" %>
    </p>
  <% end %>
</div>