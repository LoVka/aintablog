<h1>Editing post</h1>

<%= error_messages_for :post %>

<% form_for(@post) do |f| %>
  <p>
    <b>Permalink</b><br />
    <%= f.text_field :permalink %>
  </p>

  <p>
    <b>Header</b><br />
    <%= f.text_field :header %>
  </p>

  <p>
    <b>Content</b><br />
    <%= f.text_area :content %>
  </p>

  <p>
    <b>Cite</b><br />
    <%= f.text_field :cite %>
  </p>

  <p>
    <b>Type</b><br />
    <%= f.text_field :type %>
  </p>

  <p>
    <b>User</b><br />
    <%= f.text_field :user_id %>
  </p>

  <p>
    <b>Lang</b><br />
    <%= f.text_field :lang %>
  </p>

  <p>
    <b>Comment counter</b><br />
    <%= f.text_field :comment_counter %>
  </p>

  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @post %> |
<%= link_to 'Back', posts_path %>
