<div class="date">
  <span class="month"><%= post.created_at.strftime('%b') -%></span>
  <span class="day"><%= post.created_at.strftime('%e') -%></span>
</div>
<blockquote>
  <%=h post.content -%>
</blockquote>
<% unless post.cite.blank? -%>
  <cite>
    <% unless post.header.blank? -%>&#x2010; <%= spanned_link h(post.cite), post.header %><% else -%>&#x2010; <%=h post.cite %><% end -%>    
  </cite>
<% end -%>